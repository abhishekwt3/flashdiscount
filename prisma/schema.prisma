generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model DiscountBarSettings {
  id                 String   @id @default(uuid())
  shopId             String
  backgroundColor    String   @default("#FF5733")
  textColor          String   @default("#FFFFFF")
  emoji              String   @default("ðŸ”¥")
  timerDuration      Int      @default(15)
  discountPercentage Int      @default(15)
  barText            String   @default("Limited time offer! {discount}% off your entire order automatically applied!")
  isActive           Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([shopId])
}

model DiscountCode {
  id                 String    @id @default(uuid())
  shopId             String
  code               String
  discountPercentage Int
  isAutomatic        Boolean   @default(true)
  discountId         String?
  expiresAt          DateTime?
  createdAt          DateTime  @default(now())

  @@index([shopId])
  @@index([code])
}
